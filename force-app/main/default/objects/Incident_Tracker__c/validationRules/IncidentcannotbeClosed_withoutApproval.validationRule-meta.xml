<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IncidentcannotbeClosed_withoutApproval</fullName>
    <active>false</active>
    <description>To make sure that the Incident is not closed without the Approval</description>
    <errorConditionFormula>AND(
RecordType.DeveloperName = &apos;Suspension_Record_Type&apos;,
ISPICKVAL(Incident_Status__c, &apos;Closed&apos;),
IncidentRecordApproved__c = False
)</errorConditionFormula>
    <errorDisplayField>Incident_Status__c</errorDisplayField>
    <errorMessage>The Incident record is not Approved; Hence, cannot be Closed.</errorMessage>
</ValidationRule>
